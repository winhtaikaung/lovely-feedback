{
    "extends": ["tslint:latest", "tslint-react", "tslint-react-hooks", "tslint-plugin-prettier"],
    "rules": {
      "prettier": [true, ".prettierrc"],
      "no-empty-interface": false,
      "jsx-no-lambda": false,
      "semicolon": [false, "always", "ignore-bound-class-methods"],
      "interface-name": false,
      "object-literal-shorthand": [false, "never"],
      "indent": [true, "spaces"],
      "quotemark": [true, "single", "jsx-double"],
      "no-var-requires": false,
      "ordered-imports": [
        true,
        {
          "module-source-path": "full",
          "grouped-imports": true,
          "groups": [
            {
              "name": "react",
              "match": "^react.*",
              "order": 1
            },
            {
              "name": "internal modules",
              "match": "^@app.*",
              "order": 3
            },
            {
              "name": "relative dir",
              "match": "^[.].*",
              "order": 4
            },
            {
              "name": "node_modules",
              "match": ".*",
              "order": 2
            }
          ]
        }
      ],
  
      "no-unused-variable": [false, "react"],
      "member-ordering": [false],
      "object-literal-sort-keys": false,
      "no-shadowed-variable": false,
      "no-console": [true],
      "no-consecutive-blank-lines": [false],
      "no-string-literal": false,
      "jsx-no-multiline-js": false,
      "jsx-boolean-value": false,
      "arrow-parens": [false],
      "no-implicit-dependencies": false,
      "no-submodule-imports": false,
      "no-empty": false,
      "jsx-alignment": false,
      "jsx-wrap-multiline": false
    },
    "linterOptions": {
      "exclude": ["**/*.js"],
      "include": ["**/*.ts", "**/*.tsx"]
    },
    "ordered-imports": [
      true,
      {
        "module-source-path": "basename"
      }
    ]
  }